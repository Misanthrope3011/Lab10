<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/poleTekstowe1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="16dp"
        android:text="@string/poleTekstowe1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/przycisk4"
        android:layout_width="145dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:onClick="przycisk4"
        android:text="@string/przycisk4"
        app:layout_constraintStart_toEndOf="@+id/przycisk3"
        app:layout_constraintTop_toBottomOf="@+id/poleTekstowe4" />

    <EditText
        android:id="@+id/poleEdycyjne2"
        android:layout_width="55dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/poleEdycyjne2"
        app:layout_constraintStart_toEndOf="@+id/poleTekstowe4"
        app:layout_constraintTop_toBottomOf="@+id/pasekPostepu" />

    <EditText
        android:id="@+id/poleEdycyjne1"
        android:layout_width="66dp"
        android:layout_height="53dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/poleEdycyjne1"
        app:layout_constraintStart_toEndOf="@+id/poleTekstowe3"
        app:layout_constraintTop_toBottomOf="@+id/pasekPostepu" />

    <Button
        android:id="@+id/przycisk3"
        android:layout_width="155dp"
        android:layout_height="55dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="40dp"
        android:onClick="przycisk3"
        android:text="@string/przycisk3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poleEdycyjne1" />

    <Button
        android:id="@+id/przycisk2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="8dp"
        android:onClick="przycisk2"
        android:text="@string/przycisk2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poleTekstowe2" />

    <Button
        android:id="@+id/przycisk1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="12dp"
        android:onClick="przycisk1"
        android:text="@string/przycisk1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poleTekstowe1" />

    <TextView
        android:id="@+id/poleTekstowe4"
        android:layout_width="73dp"
        android:layout_height="51dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="@string/poleTekstowe4"
        app:layout_constraintStart_toEndOf="@+id/poleEdycyjne1"
        app:layout_constraintTop_toBottomOf="@+id/pasekPostepu" />

    <TextView
        android:id="@+id/poleTekstowe3"
        android:layout_width="111dp"
        android:layout_height="57dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:text="@string/poleTekstowe3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pasekPostepu" />

    <TextView
        android:id="@+id/poleTekstowe2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="12dp"
        android:text="@string/poleTekstowe2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/przycisk1" />

    <ProgressBar
        android:id="@+id/pasekPostepu"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="332dp"
        android:layout_height="22dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="21dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/przycisk2" />

</androidx.constraintlayout.widget.ConstraintLayout>